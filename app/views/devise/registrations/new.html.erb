
<%= form_for(resource, as: resource_name, html: {class: "form-auth text-center mt-5 mb-3"}, url: registration_path(resource_name)) do |f| %>
<h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>

  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.text_field :first_name, class: "form-control", placeholder: "First name", autofocus: true %> <br>
  <%= f.email_field :email, autofocus: true,class:"form-control", autocomplete: "email", placeholder: "Email address" %> <br>

  <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "password" %> <br>

  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "Password Confirmation" %> <br>

  <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>

<% end %>

<div class="container mt-5 mb-3 text-muted text-center">
  <%= render "devise/shared/links" %>
</div>
